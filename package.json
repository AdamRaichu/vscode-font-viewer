{
  "name": "font-viewer",
  "displayName": "Font Preview",
  "description": "An extension which allows you to preview fonts.",
  "publisher": "adamraichu",
  "icon": "file-font-icon.png",
  "author": {
    "name": "AdamRaichu"
  },
  "galleryBanner": {
    "color": "#34495e",
    "theme": "dark"
  },
  "license": "MIT",
  "categories": [
    "Visualization"
  ],
  "keywords": [
    "font",
    "fonts",
    "preview",
    "viewer"
  ],
  "repository": {
    "url": "https://github.com/AdamRaichu/vscode-font-viewer",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/AdamRaichu/vscode-font-viewer/issues"
  },
  "version": "1.1.0",
  "browser": "./dist/main.js",
  "main": "./dist/main.js",
  "activationEvents": [
    "onCustomEditor:fontViewer.FontEdit"
  ],
  "engines": {
    "vscode": "^1.63.0"
  },
  "contributes": {
    "customEditors": [
      {
        "viewType": "fontViewer.FontEdit",
        "displayName": "Font Preview",
        "selector": [
          {
            "filenamePattern": "*.eot"
          },
          {
            "filenamePattern": "*.otf"
          },
          {
            "filenamePattern": "*.ttf"
          },
          {
            "filenamePattern": "*.woff"
          },
          {
            "filenamePattern": "*.woff2"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": [
      {
        "title": "Font Viewer",
        "properties": {
          "fontViewer.ligaturesEnabled": {
            "type": "boolean",
            "markdownDescription": "Whether the preview should allow [ligatures](https://fonts.google.com/knowledge/glossary/ligature).",
            "default": true
          },
          "fontViewer.sentence": {
            "type": "string",
            "markdownDescription": "The pangram to use in the font preview.\n\nReopen the file to see changes.",
            "default": "The quick brown fox jumps over the lazy dog. 1234567890"
          },
          "fontViewer.characterList": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "markdownDescription": "A list of strings to show at the beginning of the font preview. Each array item is shown in a new paragraph.\n\nReopen the file to see changes.",
            "default": [
              "abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ",
              "1234567890 . : , ; ' \" (!?) +-/="
            ]
          }
        }
      }
    ]
  },
  "scripts": {
    "build": "webpack"
  },
  "devDependencies": {
    "@types/vscode": "^1.63.0",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "jszip": "^3.10.1"
  }
}
